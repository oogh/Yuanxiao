<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="160dp"
    android:layout_margin="8dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackgroundBorderless"
    app:contentPadding="16dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/tv_logo"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_notice_red"
            android:gravity="center"
            android:text="专"
            android:textColor="@android:color/white"
            android:textSize="32dp"
            app:layout_constraintBottom_toTopOf="@+id/tv_notice_tag"
            app:layout_constraintHorizontal_bias="0.545"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/gl_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_notice_date"
            />

        <TextView
            android:id="@+id/tv_notice_title"
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            app:layout_constraintBottom_toTopOf="@+id/gl_horizontal"
            app:layout_constraintLeft_toLeftOf="@+id/gl_vertical"
            app:layout_constraintTop_toTopOf="@+id/gl_horizontal"
            app:layout_constraintVertical_bias="0.375"
            tools:text="工程教育认证和持续改进"/>

        <TextView
            android:id="@+id/tv_notice_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="0dp"
            android:layout_marginLeft="0dp"
            android:layout_marginStart="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            app:layout_constraintBottom_toTopOf="@+id/tv_notice_title"
            app:layout_constraintLeft_toLeftOf="@+id/gl_vertical"
            tools:text="专题讲座"/>

        <TextView
            android:id="@+id/tv_notice_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="8dp"
            app:layout_constraintLeft_toLeftOf="@+id/gl_vertical"
            app:layout_constraintTop_toBottomOf="@+id/tv_notice_title"
            tools:text="2017年10月16日"/>

        <android.support.constraint.Guideline
            android:id="@+id/gl_vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.25"/>

        <android.support.constraint.Guideline
            android:id="@+id/gl_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>